{% extends 'layout.twig' %}

{% block body %}
    {% for equipo in equipos %}
        <div>
           <h1 id="tituloEquipos"><b>{{equipo.nombre}}</b></h1>
        </div> 
        {% for jugador in equipo.plantel %}
            <!-- Informacion Jugadores -->
            <div class="media" id="plantel">
                <div class="media-left media-middle">
                    <a>
                        <img class="media-object" src="./images/{{equipo.nombre}}/Plantel/{{jugador.foto}}" alt ="Imagen No Disponible">
                    </a>
                </div>
                <div class = "media-body">
                    <h4 class="media-heading">
                        {{ jugador.apellido }}, {{ jugador.nombre }}
                    </h4>
                    <p>
                        Fecha de Nacimiento: {{ jugador.fechaNacimiento }}
                        <br>
                        Edad: {{ jugador.edad }}
                        <br>
                        Altura: {{ jugador.altura }}
                        <br>
                        Peso: {{ jugador.peso }}
                        <br>
                        Camiseta: {{ jugador.numeroCamiseta }}
                        <br>
                        Pie Habil: {{ jugador.pieHabil }}
                        <br>
                        Posicion: {{ jugador.posicion }}
                    </p>
                </div>
                <br>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="modal" id="addFav" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h2 class="modal-title">Actualización</h2>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>El equipo ha sido agregado a favoritos correctamente.</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
          </div>
        </div>
      </div>
    </div>

    <div class="modal" id="delFav" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h2 class="modal-title">Actualización</h2>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <p>El equipo ha sido eliminado de favoritos correctamente.</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
          </div>
        </div>
      </div>
    </div>

    <script src="javascripts/favoritos.js"></script>
    <script src="javascripts/obtenerEquipo.js"></script>
{% endblock %}